<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FullScreen"  parent="AppTheme.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>


    <style name="tutorialText">
        <item name="android:layout_marginStart">@dimen/heavy_horizontal_spacing</item>
        <item name="android:layout_marginEnd">@dimen/heavy_horizontal_spacing</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="AccentButton">
        <item name="android:background">@drawable/accent_button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AccentReverseButton">
        <item name="android:background">@drawable/accent_reverse_button_background</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="PrimaryColorButton">
        <item name="android:layout_marginBottom">@dimen/heavy_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/heavy_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/heavy_horizontal_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/accent_button_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="GoogleButton">
        <item name="android:layout_marginBottom">@dimen/heavy_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/heavy_horizontal_spacing</item>
        <item name="android:layout_marginRight">@dimen/heavy_horizontal_spacing</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">@drawable/google_button_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="ListItemTitle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">@dimen/list_item_title_size</item>
    </style>

    <style name="ClickableCard">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="cardPreventCornerOverlap">false</item>
        <item name="contentPadding">0dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>
</resources>
