<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    style="@style/ClickableCard"
    android:id="@+id/root"
    android:layout_margin="@dimen/small_vertical_spacing"
    android:layout_gravity="center"
    android:layout_height="@dimen/news_card_size">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/root_cardview"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/news_banner_imageview"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:contentDescription="@string/news_banner" />

        <TextView
            android:id="@+id/news_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/medium_horizontal_spacing"
            android:layout_marginStart="@dimen/medium_horizontal_spacing"
            android:paddingStart="@dimen/small_horizontal_spacing"
            android:paddingEnd="@dimen/small_horizontal_spacing"
            android:paddingTop="@dimen/small_vertical_spacing"
            android:paddingBottom="@dimen/small_vertical_spacing"
            style="@style/BoldTextViewWithShadow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Pie" />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>